<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:paddingLeft="10dp"
                android:text="User name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:paddingLeft="10dp"
                android:text="User Phone number"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/user_total_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:paddingLeft="10dp"
                android:text="total"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_destination"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="User destination" />

        <TextView
            android:id="@+id/user_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="User menu" />
    </LinearLayout>

    <Button
        android:id="@+id/delivery_finish_btn"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:text="배달완료"
        android:background="@drawable/start"
        android:textSize="12sp" />
    <Button
        android:id="@+id/delivery_navigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:text="경로안내"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"

        android:layout_marginLeft="5sp"
        android:background="@drawable/navi"
        android:textSize="12sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        />

</LinearLayout>

