<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_user"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_user"
        android:networkSecurityConfig="@xml/security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.app_user.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.app_user.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.app_user.First_Main_Activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.app_user.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.app_user.LoginActivity"/>
    </application>

</manifest>