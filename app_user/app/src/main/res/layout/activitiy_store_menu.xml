<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MenuActivity"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignTop="@+id/fragment_container"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"/>

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="168dp"
            android:layout_height="176dp"
            android:layout_marginTop="?attr/actionBarSize"/>

        <TextView
            android:id="@+id/store_name"
            android:layout_width="282dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/store_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/store_image"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/store_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_name"
            android:layout_alignLeft="@+id/store_name"
            android:layout_alignTop="@+id/store_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="TextView"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_phone"
            android:layout_alignLeft="@+id/store_phone"
            android:layout_alignTop="@+id/store_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="TextView"
            android:textSize="20sp"></TextView>

        <Button
            android:id="@+id/store_inform_button"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_container"
            android:layout_alignTop="@+id/store_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="125dp"
            android:text="상세보기"></Button>

        <Button
            android:id="@+id/menu_list_button"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_container"
            android:layout_alignTop="@+id/store_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="289dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="8dp"
            android:text="메뉴보기"></Button>

        <Button
            android:id="@+id/order_button"
            android:layout_above = "@+id/bottom_navigation"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showSelectedItems"
            android:text="주문 완료"
            ></Button>

        <FrameLayout
            android:id="@+id/sub_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_above="@+id/order_button"
            ></FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation">
        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>
</android.support.v4.widget.DrawerLayout>
