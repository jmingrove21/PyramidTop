<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MenuActivity"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignTop="@+id/fragment_container"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"/>

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="168dp"
            android:layout_height="176dp"
            app:srcCompat="@drawable/alchon"
            android:layout_marginTop="?attr/actionBarSize"/>
        <TextView
            android:id="@+id/store_name"
            android:layout_width="282dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/store_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/store_image"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/store_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_name"
            android:layout_alignLeft="@+id/store_name"
            android:layout_alignTop="@+id/store_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="TextView"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_phone"
            android:layout_alignLeft="@+id/store_phone"
            android:layout_alignTop="@+id/store_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="TextView"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_rest"
            android:layout_width="62dp"
            android:layout_height="27dp"
            android:layout_alignStart="@+id/store_building_name"
            android:layout_alignLeft="@+id/store_building_name"
            android:layout_alignTop="@+id/store_building_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="176dp"
            android:layout_marginRight="176dp"
            android:text="휴무일: "
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_rest_day"
            android:layout_width="169dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/store_building_name"
            android:layout_alignLeft="@+id/store_building_name"
            android:layout_alignTop="@+id/store_building_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="TextView"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_branch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_image"
            android:layout_alignStart="@+id/store_image"
            android:layout_alignBottom="@+id/store_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-27dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_address"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignStart="@+id/store_branch_name"
            android:layout_alignTop="@+id/store_branch_name"
            android:layout_alignBottom="@+id/store_branch_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-27dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_address"
            android:layout_alignTop="@+id/store_address"
            android:layout_alignBottom="@+id/store_address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="331dp"
            android:layout_marginRight="331dp"
            android:layout_marginBottom="-27dp"
            android:fontFamily="sans-serif"
            android:text="운영시간:"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation_start_time"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_address"
            android:layout_alignTop="@+id/store_address"
            android:layout_alignBottom="@+id/store_address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="212dp"
            android:layout_marginRight="212dp"
            android:layout_marginBottom="-27dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation_wave"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_address"
            android:layout_alignTop="@+id/store_address"
            android:layout_alignBottom="@+id/store_address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="201dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="146dp"
            android:layout_marginRight="146dp"
            android:layout_marginBottom="-26dp"
            android:fontFamily="sans-serif"
            android:text=" ~ "
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation_end_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_address"
            android:layout_alignTop="@+id/store_address"
            android:layout_alignBottom="@+id/store_address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="263dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="-26dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/store_operation"
            android:layout_alignTop="@+id/store_operation"
            android:layout_alignBottom="@+id/store_operation"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-60dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <ListView
            android:id="@+id/checkbox_ListView"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignTop="@+id/store_notice"
            android:layout_marginTop="60dp" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_marginBottom="0dp"/>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>
</android.support.v4.widget.DrawerLayout>
