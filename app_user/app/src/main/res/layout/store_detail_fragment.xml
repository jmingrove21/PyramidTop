<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_navigation"
    android:background="@android:color/holo_red_light"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/store_rest"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="336dp"
        android:layout_marginRight="338dp"
        android:text="휴무일: "
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/store_rest_day"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="118dp"
        android:text="TextView"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/store_branch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="336dp"
        android:layout_marginRight="328dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_address"
        android:layout_width="353dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="-2dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_operation"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="307dp"
        android:fontFamily="sans-serif"
        android:text="운영시간:"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_operation_start_time"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="235dp"
        android:layout_marginRight="189dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_operation_wave"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="152dp"
        android:fontFamily="sans-serif"
        android:text="~"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_operation_end_time"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="31dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_notice"
        android:layout_width="412dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>
</RelativeLayout>
