<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_navigation">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/store_notice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:layout_weight="10"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/store_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"></TextView>
    <TextView
        android:id="@+id/store_operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:fontFamily="sans-serif"
        android:text="운영시간:"
        android:textSize="18sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/store_operation_start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation_wave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:text="~"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/store_operation_end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textSize="18sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/store_rest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:text="휴무일: "
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_rest_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:text="TextView"
            android:textSize="20sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_mininum_text"
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:layout_weight="3"

            android:text="최소주문금액: "
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/store_mininum_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:text="TextView"
            android:textSize="20sp"></TextView>
    </LinearLayout>
</LinearLayout>
</ScrollView>
