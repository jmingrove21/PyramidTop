<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/alchon" />

    <TextView
        android:id="@+id/menu_inform"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Textview"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="257dp"
        android:layout_marginRight="257dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="메뉴이름:"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/price_inform"
        android:layout_width="48dp"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="-64dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="270dp"
        android:layout_marginRight="270dp"
        android:text="가격:"
        android:textSize="5sp"></TextView>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="-13dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:text="TextView"
        android:textSize="5sp"></TextView>

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="원"
        android:textSize="5sp"></TextView>

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="273dp"
        android:text="ㅡ" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="185dp"
        android:text="+" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="5sp"></TextView>


    <Button
        android:id="@+id/choice"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="246dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="61dp"
        android:text="선택"
        android:textSize="5sp" />

</RelativeLayout>