<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/alchon" />

    <TextView
        android:id="@+id/menu_inform"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Textview"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="258dp"
        android:layout_marginRight="258dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="메뉴이름:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/price_inform"
        android:layout_width="48dp"
        android:layout_height="19dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="-64dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="270dp"
        android:layout_marginRight="270dp"
        android:text="가격:"
        android:textSize="15sp"></TextView>

    <TextView
        android:id="@+id/price"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:text="TextView"
        android:textSize="15sp"></TextView>

    <TextView
        android:id="@+id/won"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="원"
        android:textSize="15sp"></TextView>

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="259dp"
        android:text="ㅡ" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="198dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="165dp"
        android:text="+" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/menu_inform"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="157dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="214dp"
        android:layout_marginRight="214dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15sp"></TextView>



    <Button
        android:id="@+id/choice"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="302dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="5dp"
        android:text="선택" />

</RelativeLayout>